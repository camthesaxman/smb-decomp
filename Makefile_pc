O_FILES := $(addsuffix .o,$(SOURCES))
ALL_O_FILES := $(O_FILES)

$(TARGET): $(ALL_O_FILES)
	$(CC) $^ $(LDFLAGS) -o $@

%.c.o: %.c
	$(CC) -c $(CFLAGS) $(CPPFLAGS) -o $@ $<

%.cpp.o: %.cpp
	$(CC) -c $(CFLAGS) $(CXXFLAGS) $(CPPFLAGS) -o $@ $<

clean:
	$(RM) $(TARGET)
	find . -name '*.o' -exec rm {} +
	find . -name '*.dep' -exec rm {} +
	find . -name '*.dump' -exec rm {} +
